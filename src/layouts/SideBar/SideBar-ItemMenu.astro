---
const { title } = Astro.props;
import "../../styles/sideBar.css";
---

<li>
    <button
        type="button"
        class="aside_ItemMenu aside_ItemMenu-dark-mode"
        aria-controls="dropdown-example"
        data-collapse-toggle="dropdown-example"
    >
        <slot name="li-icon" />
        <span class="">{title}</span>
    </button>
    <ul id="dropdown-example" class="hidden py-2 space-y-2 mx-3">
        <slot name="li-item" />
    </ul>
</li>
